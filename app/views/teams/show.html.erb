<div class="container text-white">
  <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1>My Team</h1>
    <%= link_to "Voltar para Dashboard", dashboard_team_path(@team), class: "btn btn-outline-light  " %>
  </div>

  <p>Current User: <%= @team.user.email %></p>
  <h2><%= @team.name %></h2>
  <h3>Cash: <%= @team.budget %></h3>
  <% @team.players.each do |player| %>
    <p><%= player.name %> - Position: <%= player.position %> - Level: <%= player.level %> - Red Cards: <%= player.red_card %> - Yellow Cards: <%= player.yellow_card %> - Injuried: <%= player.injury %></p>
  <% end %>
  <h2>Rival Teams</h2>
  <% @rival_teams.each do |rival_team| %>
    <p><%= rival_team.name %></p>
    <p>Campaign: <%= rival_team.campaign.name %></p>
  <% end %>
</div>
