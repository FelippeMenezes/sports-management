<div class="container">
  <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="text-white">Teams</h1>
    <% if policy(Team).create? %>
      <%= link_to "New Team", new_team_path, class: "btn btn-outline-light" %>
    <% end %>
  </div>
  <div>
      <% @teams.each do |team| %>
        <%= link_to team.name, dashboard_team_path(team), class: "btn btn-outline-light" %>
      <% end %>
  </div>

</div>
