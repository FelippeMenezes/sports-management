<div class="container">
  <h1>Teams</h1>
  <% @teams.each do |team| %>
    <%= link_to team.name, dashboard_team_path(team), class: "btn btn-outline-secondary" %>
  <% end %>
  <% if policy(Team).create? %>
    <%= link_to "New Team", new_team_path, class: "btn btn-outline-primary" %>
  <% end %>
</div>
